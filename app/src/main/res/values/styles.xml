<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonDialogStyle" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/common_dialog_enter</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/common_dialog_exit</item>
    </style>

    <style name="FriendCirclePopUpWindow" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/popup_window_enter</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/popup_window_exit</item>
    </style>
    <style name="LongClickPopUpWindow">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/long_click_popup_window_enter</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/long_click_popup_window_exit</item>
    </style>
    <style name="LongClickLeftPopUpWindow">
        <!--//进入时的动画-->
        <item name="android:windowEnterAnimation">@anim/long_click_left_popup_window_enter</item>
        <!--//退出时的动画-->
        <item name="android:windowExitAnimation">@anim/long_click_left_popup_window_exit</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
